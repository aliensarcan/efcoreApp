@model Kurs

<!-- Öğrenci Ekleme Formu Başlangıcı -->
<h2>Kurs Ekleme</h2>
<hr>
<!-- Form Başlangıcı -->
<form asp-controller="Kurs" asp-action="Create" method="post">
    <!-- Öğrenci Adı -->
    <div class="mb-3">
        <label asp-for="Baslik" class="form-label">Kurs Adı</label>
        <input asp-for="Baslik" class="form-control">
       
    </div>
    <div class="mb-3">
        <label asp-for= "OgretmenId">Öğretmen</label>
        <select asp-for = "OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
        <option value="">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class=" btn btn-secondary">Kaydet</button>
    
    </form>

